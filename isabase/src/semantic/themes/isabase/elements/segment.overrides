/*******************************
         Site Overrides
*******************************/

/*-------------------
       Raised
--------------------*/

.ui.raised.segments, .ui.raised.segment {
    border-top: 0;
}

/*-------------------
       Footer
--------------------*/
.ui.vertical.footer.segment {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: none;
    padding-bottom: 20px;
}

.ui.vertical.footer.segment .ui.header {
    color: #868686;
}